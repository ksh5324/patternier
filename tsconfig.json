{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
  
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      "esModuleInterop": true,
      "resolveJsonModule": true,
  
      "noEmit": true,
  
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
  
      "types": ["node"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "fixtures/**/*.ts", "fixtures/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
  }
  